<%= form_for @topic, data: { turbo: false }  do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row">
    <div class="col-xl-6">
      <div class="row form-group forms-sample">
        <div class="col-xl-4">
          <%= f.label :name, t(".name"), class: "required" %>
        </div>
        <div class="col-xl-8">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="row form-group forms-sample">
        <div class="col-xl-4">
          <%= f.label :description, t(".description"), class: "required" %>
        </div>
        <div class="col-xl-8">
          <%= f.text_field :description, class: "form-control description" %>
        </div>
      </div>
    </div>
    <div class="col-xl-6">
      <div class="row form-group forms-sample">
        <div class="col-xl-4">
          <%= f.label :subject, t(".subject"), class: "required" %>
        </div>
        <div class="col-xl-8">
          <%= f.select :subject_id, options_for_select(Subject.pluck(:name, :id)),
            {include_blank: false}, class: "form-control" %>
        </div>
      </div>
      <div class="row form-group forms-sample">
        <div class="col-xl-4">
          <%= f.label :duration, t(".duration"), class: "required" %>
        </div>
        <div class="col-xl-8">
          <%= f.number_field :duration, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div>
    <div class="row">
      <div class="col-xl-6">
      </div>
      <div class="col-xl-3">
      </div>
      <div class="col-xl-3">
        <%= f.submit yield(:button_text), class: "btn btn-primary mr-2" %>
      </div>
    </div>
  </div>
<% end %>
