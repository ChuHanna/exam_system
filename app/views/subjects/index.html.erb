<% provide :title, t(".title") %>
<h1 class="h3 mb-2 text-gray-800"><%= t".title" %></h1>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <%= render "subjects/search" %>
  </div>
  <div class="card-body">
   <% if can? :manage, Subject %>
    <%= link_to(new_subject_path, class: "nav-link") do %>
      <i class="fas fa-plus-circle"></i>
      <%= t ".create" %>
    <% end %>
    <%end%>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th><%= t ".no_" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".description" %></th>
            <th><%= t ".user_name" %></th>
            <th><%= t ".topic_name" %></th>
            <th><%= t ".action" %></th>
          </tr>
        </thead>
        <tbody>
          <% @subjects.each_with_index do |subject, index| %>
            <% if can? :read, Subject %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= truncate(subject.name, length: 20) %></td>
                <td><%= truncate(subject.description, length: 30) %></td>
                <td><%= truncate(subject.user.name, length: 20) %></td>
                <td><%= truncate(subject.topics.pluck(:name).join(',')) %></td>
                <td center>
                  <%= link_to( "#", class: "btn-info btn-circle btn-sm") do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <% if can? :manage, subject %>
                    <%= link_to(edit_subject_path(subject), class: "btn-primary btn-circle btn-sm") do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
