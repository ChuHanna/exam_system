<% provide :title, t(".title") %>
<h1 class="h3 mb-2 text-gray-800"><%= t".title" %></h1>

<div class="card shadow mb-4">
  <div class="card-body">
    <%= link_to(new_user_path, class: "nav-link") do %>
      <i class="fas fa-plus-circle"></i>
      <%= t ".create" %>
    <% end %>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th><%= t ".no_" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".email" %></th>
            <th><%= t ".role" %></th>
            <th><%= t ".status" %></th>
            <th><%= t ".updated_or_deleted" %></th>
            <th><%= t ".action" %></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each_with_index do |user, index| %>
            <% if can? :read, User %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= truncate(user.name, length: 20) %></td>
                <td><%= truncate(user.email, length: 20) %></td>
                <td><%= user.role %></td>
                <td><%= user.status %></td>
                <td><%= user.deleted_at? ? user.deleted_at : user.updated_at %></td>
                <td center>
                  <%= link_to( "#", class: "btn-info btn-circle btn-sm") do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <% if can? :manage, user %>
                    <%= link_to(edit_user_path(user), class: "btn-primary btn-circle btn-sm") do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                  <%end%>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
